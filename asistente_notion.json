{
  "openapi": "3.0.1",
  "info": {
    "title": "Asistente Notion Obra",
    "description": "Permite a un agente GPT consultar y crear entradas en bases de datos de Notion relacionadas con arquitectura y construcci√≥n.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://notion-gpt-agent.onrender.com"
    }
  ],
  "paths": {
    "/listar": {
      "get": {
        "summary": "Listar registros de una base de datos",
        "operationId": "listarRegistros",
        "parameters": [
          {
            "name": "database_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID de la base de datos de Notion"
          }
        ],
        "responses": {
          "200": {
            "description": "Listado de registros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/crear": {
      "post": {
        "summary": "Crear una nueva entrada en la base de datos",
        "operationId": "crearRegistro",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "database_id": {
                    "type": "string"
                  },
                  "propiedades": {
                    "type": "object"
                  }
                },
                "required": ["database_id", "propiedades"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registro creado correctamente"
          }
        }
      }
    }
  }
}
