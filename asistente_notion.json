{
  "openapi": "3.1.0",
  "info": {
    "title": "Asistente Notion",
    "version": "1.0.0",
    "description": "Permite consultar y modificar bases de datos de Notion desde un agente GPT"
  },
  "servers": [
    {
      "url": "https://notion-gpt-agent.onrender.com"
    }
  ],
  "paths": {
    "/listar": {
      "get": {
        "summary": "Listar registros",
        "parameters": [
          {
            "name": "database_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID de la base de datos de Notion"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de registros de la base de datos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "registros": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/campos": {
      "get": {
        "summary": "Obtener campos de una base de datos",
        "parameters": [
          {
            "name": "database_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID de la base de datos de Notion"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de campos de la base de datos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "campos": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
